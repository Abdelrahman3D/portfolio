.intro
  margin: 100px auto 150px
  display: flex
  max-width: 80vw
  align-items: center
  flex-wrap: wrap

.intro-figure
  width: 40%
  margin-left: 10%
  +tablet()
    width: 90%
    margin: auto
    order: 1
    margin-bottom: 50px
.intro-info
  width: 50%
  +tablet()
    width: 100%
    order: 2

.intro-title
  font-size: $font-massive
  color: $primary
  margin: 0 0 1em
  +tablet()
    font-size: $font-large

.intro-subtitle
  font-size: $font-medium
  font-weight: normal