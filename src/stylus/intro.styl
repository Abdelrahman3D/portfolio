.intro
  padding: 50px 0
  display: flex
  max-width: 80vw
  min-height: calc(100vh - 150px)
  margin: auto
  align-items: center

.intro-figure
  width: 40%
  margin-left: 10%

.intro-info
  width: 50%

.intro-title
  font-size: $font-massive
  color: $primary
  margin: 0 0 1em

.intro-subtitle
  font-size: $font-medium
  font-weight: normal