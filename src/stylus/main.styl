@font-face
  font-family: 'Fira Code'
  src: local('Fira Code'),
       url('../fonts/FiraCode-Regular.woff2') format('woff2'),
       url('../fonts/FiraCode-Regular.woff') format('woff'),
       url('../fonts/FiraCode-Regular.ttf') format('truetype');
  font-style: normal
  font-weight: 500
  font-display: swap

@font-face
  font-family: 'Fira Code'
  src: local('Fira Code Bold'),
       url('../fonts/FiraCode-Bold.woff2') format('woff2'),
       url('../fonts/FiraCode-Bold.woff') format('woff'),
       url('../fonts/FiraCode-Bold.ttf') format('truetype');
  font-style: normal
  font-weight: 700
  font-display: swap

*
  box-sizing: border-box
  color: $dark

body
  font-family: 'Fira Code', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  background-color: $slategray
  margin: 0
  padding: 0
  color: $dark

html
body
  scroll-behavior: smooth
  transition: 100ms

.main
  background-color: $white
  border-radius: 20px
  border: 1px solid $gray
  margin: 20px
  +tablet()
    margin: 5px

.contact-button
  text-decoration: none
  padding: 0.1em 0.3em 0.1em 0.1em
  font-size: $font-massive
  background-image: linear-gradient(0, $dark, $dark)
  background-size: 100% 0.1em
  background-position: bottom center
  background-repeat: no-repeat
  transition: 130ms cubic-bezier(0.4, 0, 0.2, 1)
  &:focus
    background-size: 100% 100%
    background-image: linear-gradient(0, $primary, $primary)