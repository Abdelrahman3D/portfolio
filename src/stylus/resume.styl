@font-face
  font-weight: 300
  font-style: lighter
  font-family: 'Roboto'
  src: local('Roboto Light'), url('../fonts/Roboto-Light.ttf') format('truetype')
  font-display: swap

@font-face
  font-weight: 500
  font-style: normal
  font-family: 'Roboto'
  src: local('Roboto'), url('../fonts/Roboto-Regular.ttf') format('truetype')
  font-display: swap

@font-face
  font-weight: 700
  font-style: bold
  font-family: 'Roboto'
  src: local('Roboto Bold'), url('../fonts/Roboto-Bold.ttf') format('truetype')
  font-display: swap


.resume
  max-width: 100ch
  margin: 60px auto
  border: 1px solid $dark
  background-color: $white
  color: $dark
  line-height: 1.5em
  letter-spacing: 0.5px
  font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'

.resume-header
  display: flex
  flex-wrap: wrap
  padding: 20px 40px
  border-bottom: 1px solid $slategray
  +mobile()
    padding: 20px

.resume-name
  width: 100%

.resume-header-info
  display: flex
  align-items: center
  width: 50%
  margin: 5px 0
  text-decoration: none
  color: $dark
  +mobile()
    width: 100%
  .icon
    margin-right: 10px
    color: $dark
  
.resume-experience-content
  margin: 0

.resume-section
  margin: 20px 40px
  +mobile()
    margin: 20px

.resume-title
  font-size: 20px
  margin-top: 0.5em
  margin-bottom: 0
  padding-bottom: 0.5em
  border-bottom: 1px solid $slategray

.resume-section-content
  font-size: 14px
  padding: 5px 5px 5px 10px
  text-align: justify
  ul
    padding-left: 15px
    margin: 0
  h5
    margin: 0
    font-weight: light
  p
    margin: 0

.resume-experience
  padding: 5px 0
  &:not(:last-child)
    border-bottom: 1px solid $slategray

.resume-experience-title
  display: block
  font-weight: bold
  color: $dark
  text-decoration: none
  margin-top: 0
  margin-bottom: 0.5em
  h4
    display: inline-block
    margin: 0
  small
    font-weight: normal

.resume-experience-date
.resume-experience-subtitle
  display: block
  font-size: 12px
  color: lighten($dark, 20%)

.resume-experience-subtitle
  float: right
  +mobile()
    float: none

.resume-education-data
  font-weight: bold

@media print
  .main
    margin: 0

  .resume
    max-width: 100vw
    width: 100vw
    margin: 0