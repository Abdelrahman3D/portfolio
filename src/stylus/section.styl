.section
  width: 80vw
  max-width: 1200px
  margin: 100px auto
  display: flex
  flex-wrap: wrap
  &.is-center
    align-items: center

.section-info
  width: columns(1/3)
  +tablet()
    width: 100%
.section-sticky
  position: sticky
  top: 30px
  margin-bottom: 70px
  +tablet()
    position: static
.section-elements
  width: columns(2/3)
  padding-left: columns(1/12)
  +tablet()
    width: 100%
    padding: 0
.section-title
  font-size: $font-header
  font-weight: bold
  color: $dark
  margin: 0 0 0.5em
  max-width: 200px
  &::after
    display: block
    content: ''
    height: 8px
    width: 0
    background-color: $primary
    transition: all 1.2s cubic-bezier(0.245, 0.495, 0, 0.99)
  +tablet()
    font-size: $font-header-small
  &.is-active::after
    width: 100px

.section-description
  width: columns(2/3)
  +tablet()
    width: 100%
