.section
  max-width: 80vw
  margin: 100px auto
  display: flex
  &.is-center
    align-items: center

.section-info
  width: columns(1/3)
.section-sticky
  position: sticky
  top: 30px
  margin-bottom: 100px
.section-elements
  width: columns(2/3)
  padding-left: columns(1/12)
.section-title
  font-size: $font-header
  font-weight: bold
  color: $dark
  margin: 0 0 0.5em
  &:after
    display: block
    content: ''
    height: 8px
    width: 100px
    background-color: $primary

.section-description
  width: columns(2/3)
