.section
  max-width: 80vw
  margin: 100px auto
  display: flex
  flex-wrap: wrap
  &.is-center
    align-items: center

.section-info
  width: columns(1/3)
  +tablet()
    width: 100%
.section-sticky
  position: sticky
  top: 30px
  margin-bottom: 100px
  +tablet()
    position: static
.section-elements
  width: columns(2/3)
  padding-left: columns(1/12)
  +tablet()
    width: 100%
    padding: 0
.section-title
  font-size: $font-header
  font-weight: bold
  color: $dark
  margin: 0 0 0.5em
  max-width: 300px
  &:after
    display: block
    content: ''
    height: 8px
    width: 100px
    background-color: $primary
  +tablet()
    font-size: $font-header-small

.section-description
  width: columns(2/3)
  +tablet()
    width: 100%
